<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#5AC1F0"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_option"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/ic_option" />

        <RelativeLayout
            android:id="@+id/layout_search"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/comui_search_small"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:text="搜索" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_qr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/ic_qr" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:drawableLeft="@drawable/title"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:text="标题"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <!-- 分界线 -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#E2E1E1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:background="#ffffff"
                        android:drawableLeft="@mipmap/ic_launcher"
                        android:text="测试标题"
                        android:textSize="17sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:background="#ffffff"
                        android:drawableLeft="@mipmap/ic_launcher"
                        android:text="测试标题"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:background="#ffffff"
                        android:drawableLeft="@mipmap/ic_launcher"
                        android:text="测试标题"
                        android:textSize="17sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:background="#ffffff"
                        android:drawableLeft="@mipmap/ic_launcher"
                        android:text="测试标题"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:background="#ffffff"
                        android:drawableLeft="@mipmap/ic_launcher"
                        android:text="测试标题"
                        android:textSize="17sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:background="#ffffff"
                        android:drawableLeft="@mipmap/ic_launcher"
                        android:text="测试标题"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- 分界线 -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:background="#E2E1E1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/title_button1"
                        style="@style/home_pager_title"
                        android:textColor="@color/txt_tab_selector"
                        android:text="新鲜的" />

                    <RadioButton
                        android:id="@+id/title_button2"
                        style="@style/home_pager_title"
                        android:textColor="@color/txt_tab_selector"
                        android:text="附近的" />

                    <RadioButton
                        android:id="@+id/title_button3"
                        style="@style/home_pager_title"
                        android:textColor="@color/txt_tab_selector"
                        android:text="男生" />

                    <RadioButton
                        android:id="@+id/title_button4"
                        style="@style/home_pager_title"
                        android:textColor="@color/txt_tab_selector"
                        android:text="女生" />
                </RadioGroup>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/release_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
